---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="group rounded-2xl border border-stone-100 bg-white p-8 shadow-sm transition-all duration-300 hover:shadow-xl hover:border-teal-100 hover:-translate-y-1">
  <h3 class="font-bold text-lg text-stone-900 group-hover:text-teal-700 transition-colors">
    {title}
  </h3>
  <p class="mt-3 text-base leading-relaxed text-stone-600">
    {description}
  </p>
</div>
