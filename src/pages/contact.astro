---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Contact | C-Mind">
  <div class="isolat bg-white px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Get in touch</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">
        For general inquiries, collaboration opportunities, or additional information about C-Mind, please contact us.
      </p>
    </div>
    
    <div class="mx-auto mt-16 max-w-xl sm:mt-20">
      <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
        <a href="mailto:info@c-mindcare.com" class="group block w-full rounded-2xl border border-gray-200 p-8 text-center hover:border-teal-200 hover:bg-teal-50 transition sm:col-span-2">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-teal-100 group-hover:bg-teal-200/50 transition mb-4">
            <span class="text-2xl">✉️</span>
          </div>
          <h3 class="mt-2 text-base font-semibold text-gray-900 group-hover:text-teal-900">Email Us</h3>
          <p class="mt-2 text-sm text-gray-600 group-hover:text-teal-700">info@c-mindcare.com</p>
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
